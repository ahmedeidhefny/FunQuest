<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="14dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="@color/bg_botm_menu">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lyt_liveGame">

            <ImageView
                android:id="@+id/iv_backgroundImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/bg_create_challenge" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_xmedium">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/spacing_large"
                    android:background="@drawable/btn_bg_solid"
                    android:backgroundTint="@color/bg_colorTwo"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/spacing_large"
                    android:paddingEnd="@dimen/spacing_large"
                    android:paddingTop="@dimen/spacing_small"
                    android:paddingBottom="@dimen/spacing_small">

                    <TextView
                        style="@style/AppNanoHeading"
                        android:text="Start Challenge"
                        android:includeFontPadding="true"
                        android:textColor="@color/textColorPrimaryWhite" />

                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/AppNanoHeading"
                        android:includeFontPadding="true"
                        android:text="00:44"
                        android:textColor="@color/textColorPrimaryWhite"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_middle"
                    android:layout_marginTop="@dimen/spacing_xmedium"
                    android:layout_marginEnd="@dimen/spacing_large"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tile"
                        style="@style/AppMediumHeading"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:text="Riyadh Challenge"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_baseline_arrow_forward_24"
                        app:tint="@color/textColorPrimaryGreen" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_middle"
                    android:layout_marginEnd="@dimen/spacing_large"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_city"
                        style="@style/AppSmallHeading"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:text="Riyadh"
                        android:textColor="@color/textColorPrimaryWhite"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/AppSmallBoldHeading"
                        android:text="Challenge"
                        android:textColor="@color/textColorPrimaryGreen"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

    </androidx.cardview.widget.CardView>
</layout>
