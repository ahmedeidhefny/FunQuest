<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="SearchResult"
            type="com.helloWorldTech.funQuest.data.remote.modelResponse.HomeApiResponse"
            />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/itemTypeCard"
        style="@style/CardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_xmedium"
        android:backgroundTint="@color/bg_botm_menu">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_xmedium">


<!--            <de.hdodenhof.circleimageview.CircleImageView-->
<!--                android:id="@+id/iv_image"-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="50dp"-->
<!--                android:scaleType="centerCrop"-->
<!--                android:src="@drawable/ic_message"-->
<!--                android:layout_gravity="center"-->
<!--                android:layout_marginEnd="@dimen/spacing_large"/>-->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bg_location"
                android:layout_marginEnd="@dimen/spacing_large"/>


            <TextView
                android:id="@+id/tv_city_name"
                style="@style/AppMediumHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                tools:text="Riaad City"
                android:layout_marginEnd="@dimen/spacing_mlarge"/>

            <TextView
                android:id="@+id/tv_placesNumber"
                style="@style/AppSmallHeading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                tools:text="20 placees avi" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>


