<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="@dimen/spacing_xmedium"
        android:layout_marginEnd="@dimen/spacing_xmedium"
        android:layout_marginBottom="@dimen/spacing_xmedium"
        android:gravity="end|right">

        <LinearLayout
            android:id="@+id/massage_receiver_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_message"
                style="@style/AppMicroHeading"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="end"
                tools:text="اهلا بك في تطبيق فن كويست كيف يمكنني مساعدتك"
                android:background="@drawable/bg_chat_msg_send"
                android:padding="@dimen/spacing_large"/>

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_xmedium"
                android:elevation="1dp"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_message_1" />
        </LinearLayout>


            <TextView
                android:id="@+id/tv_time"
                style="@style/AppSmallBoldHeading"
                android:layout_width="wrap_content"
                android:text="8:15"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/spacing_xlarge"/>


    </LinearLayout>


</layout>